<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Style</th>
      <th>Abv</th>
      <th>Brewery</th>
      <th>Brewery Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.description %></td>
        <td><%= beer.style.name %></td>
        <td><%= beer.abv %></td>
        <td><%= beer.brewery.name %></td>
        <td><%= beer.brewery.address %></td>
        <td><%= beer.brewery.city %></td>
        <td><%= beer.brewery.state %></td>
        <td><%= beer.brewery.country %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @beers %>

<%= page_entries_info @beers %>

<br>

<%= link_to 'New Beer', new_beer_path %>
